{
  "extends": [
    "tslint:recommended",
    "tslint-config-prettier",
    "tslint-clean-code",
    "tslint-react"
  ],
  "rulesDirectory": ["tslint-misc-rules", "./lib"],
  "rules": {
    "arrow-parens": [true, "ban-single-arg-parens"],
    "ban-types": {
      "options": [
        ["Boolean", "Avoid using the `Boolean` type. Did you mean `boolean`?"],
        ["Number", "Avoid using the `Number` type. Did you mean `number`?"],
        ["String", "Avoid using the `String` type. Did you mean `string`?"],
        ["Symbol", "Avoid using the `Symbol` type. Did you mean `symbol`?"]
      ]
    },
    "class-method-newlines": true,
    "curly": [true, "ignore-same-line"],
    "forin": false,
    "interface-member-separator": [true, ""],
    "interface-name": false,
    "interface-over-type-literal": false,
    "jsx-curly-spacing": [true, "never"],
    "jsx-equals-spacing": [true, "never"],
    "jsx-no-closing-bracket-newline": true,
    "jsx-no-braces-for-string-attributes": true,
    "jsx-no-lambda": false,
    "jsx-self-close": true,
    "jsx-space-before-trailing-slash": true,
    "max-classes-per-file": false,
    "member-access": [true, "no-public"],
    "member-ordering": {
      "options": {
        "order": [
          "instance-field",
          "constructor",
          "public-static-field",
          "public-instance-method",
          "protected-static-field",
          "protected-instance-method",
          "private-static-field",
          "private-instance-method"
        ]
      }
    },
    "no-commented-out-code": true,
    "no-conditional-assignment": false,
    "no-default-export": true,
    "no-empty": [true, "allow-empty-functions"],
    "no-namespace": false,
    "no-shadowed-variable": false,
    "no-string-literal": false,
    "object-literal-sort-keys": [true, "match-declaration-order"],
    "one-line": [true, "check-open-brace"],
    "prefer-conditional-expression": true,
    "prefer-method-signature": false,
    "prefer-const": false,
    "quotemark": [true, "single", "jsx-double", "avoid-template"],
    "react-lifecycle-order": true,
    "semicolon": false,
    "trailing-comma": {
      "options": {
        "singleline": "never",
        "multiline": {
          "arrays": "always",
          "exports": "always",
          "functions": "never",
          "imports": "always",
          "objects": "always",
          "typeLiterals": "never"
        }
      }
    },
    "triple-equals": false,
    "unified-signatures": {
      "options": [true],
      "severity": "warning"
    },
    "variable-name": [
      true,
      "check-format",
      "allow-leading-underscore",
      "allow-pascal-case"
    ]
  },
  "linterOptions": {
    "exclude": ["node_modules/**/*"]
  }
}
